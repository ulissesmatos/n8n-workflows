# Runtime
NODE_ENV=production

# Domain/CORS
ALLOWED_ORIGINS=https://workflows.nuveasy.com

# Backend auth/admin
JWT_SECRET=change-this-to-a-long-random-secret
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change-this-admin-password

# Postgres
DB_USER=minisaas
DB_PASSWORD=change-this-db-password
DB_NAME=minisaas_db
POSTGRES_PORT=5432

# Optional host bindings
BACKEND_PORT=3000
FRONTEND_PORT=8080

# Frontend build-time vars (used during Docker build)
VITE_API_URL=https://workflows.nuveasy.com/api/v1
VITE_APP_URL=https://workflows.nuveasy.com

# Optional Traefik/ACME (if you use profile production with reverse-proxy)
ACME_EMAIL=admin@nuveasy.com
