# Backend Environment Variables

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/minisaas_db"

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS (WordPress domain)
CORS_ORIGIN=http://localhost:8000,https://yourwordpress.com

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Security
BCRYPT_ROUNDS=12
SANITIZE_HTML_OPTIONS={"allowedTags":["b","i","em","strong","a","p","br","ul","li","ol"],"allowedAttributes":{"a":["href","title"]}}

# Logging
LOG_LEVEL=info
